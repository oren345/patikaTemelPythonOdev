1.soru

liste = [[1,'a',['cat'],2],[[[3]],'dog'],4,5]
yeni_liste = []
def flatten(n):
    for i in n :
        if isinstance(i,list):
            flatten(i)
        else:
            yeni_liste.append(i)

flatten(liste)
print(yeni_liste)

2.soru

def ters(l):
  l.reverse()
  for i in range(len(l)):
    (l[i])=(l[i])[::-1]
  return(l)
liste = [[1, 2], [3, 4], [5, 6, 7]]
ters_liste = ters(liste)
print(ters_liste)
